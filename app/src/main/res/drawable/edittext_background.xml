<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with slight transparency for glass effect -->
    <solid android:color="#33FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional subtle border -->
    <stroke
        android:width="1dp"
        android:color="#66FFFFFF" />

    <!-- Optional shadow/elevation effect if used in CardView -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
