<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- OSM MapView -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Toolbar -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_red_background"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnMyLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_red_background"
                android:padding="10dp"
                android:src="@drawable/ic_my_location"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/btnLayers"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_red_background"
                android:padding="10dp"
                android:src="@drawable/ic_layers"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Search Bar (Hidden by default) -->
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topToolbar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_bg_white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iconSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_search"
            app:tint="#666666" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search for places..."
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/circular_bg_gray"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:tint="#666666" />

    </LinearLayout>

    <!-- Search Results RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchLayout"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_bg_white"
        android:elevation="8dp"
        android:maxHeight="300dp"
        android:visibility="gone" />

    <!-- Route Info Panel (Hidden by default) -->
    <LinearLayout
        android:id="@+id/routeInfoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_bg_white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.5 km"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 min"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnSaveRoute"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circular_bg_blue"
                    android:padding="12dp"
                    android:src="@drawable/ic_bookmark_border"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:id="@+id/btnStartTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_bg_green"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_navigation"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/red_primary"
        app:elevation="8dp"
        app:tint="#FFFFFF" />

    <!-- Search FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:alpha="0"
        android:src="@drawable/ic_search"
        android:visibility="invisible"
        app:backgroundTint="@color/red_primary"
        app:elevation="8dp"
        app:fabSize="mini"
        app:tint="#FFFFFF" />

    <!-- Load FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        android:alpha="0"
        android:src="@drawable/ic_folder_open"
        android:visibility="invisible"
        app:backgroundTint="@color/red_primary"
        app:elevation="8dp"
        app:fabSize="mini"
        app:tint="#FFFFFF" />

    <!-- FAB Labels -->
    <TextView
        android:id="@+id/labelSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="108dp"
        android:alpha="0"
        android:background="@drawable/rounded_bg_black_semi"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="Search"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/labelLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="168dp"
        android:alpha="0"
        android:background="@drawable/rounded_bg_black_semi"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="Load Route"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="invisible" />

</RelativeLayout>