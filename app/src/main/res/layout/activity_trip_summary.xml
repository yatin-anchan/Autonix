<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#2C2C2C">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- Status Bar Spacer -->
        <View
            android:id="@+id/status_bar_spacer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/status_bar_spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@color/on_surface_variant"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tv_summary_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trip Summary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:letterSpacing="0.02" />

            <ImageView
                android:id="@+id/menu_dots"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Menu"
                app:tint="@color/on_surface_variant"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Map Container with Floating Elements -->
        <androidx.cardview.widget.CardView
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface_container"
            app:layout_constraintTop_toBottomOf="@id/header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.osmdroid.views.MapView
                    android:id="@+id/summary_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Floating Quick Stats -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quick_stats_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/surface_container_high"
                    app:strokeWidth="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_quick_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="km"
                                android:textSize="16sp"
                                android:textColor="@color/on_surface_variant"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:background="@color/outline"
                            android:layout_marginHorizontal="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_quick_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="hrs"
                                android:textSize="16sp"
                                android:textColor="@color/on_surface_variant"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Route Title Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/route_title_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface_container"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/map_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route Name"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/route_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter route name"
                        android:text="Morning Commute"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:fontFamily="sans-serif-medium"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:enabled="false"
                        android:singleLine="true"
                        android:paddingVertical="8dp" />
                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_edit_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Edit Route"
                    app:tint="@color/on_primary"
                    app:backgroundTint="@color/primary"
                    app:fabSize="mini"
                    app:elevation="4dp"
                    app:borderWidth="0dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Detailed Stats Grid -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stats_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface_container"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/route_title_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:fontFamily="sans\"
                    android:layout_marginBottom="16dp" />

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="12dp">

                        <!-- Distance Stat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_route"
                                app:tint="@color/primary"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Distance"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tv_summary_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 km"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Duration Stat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_timer"
                                app:tint="@color/primary"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Duration"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tv_summary_duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0:00:00"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Average Speed Stat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_speed"
                                app:tint="@color/primary"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Avg Speed"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tv_summary_avg_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="16 km/h"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <!-- Top Speed Stat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_flash_on"
                                app:tint="@color/secondary"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Top Speed"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tv_summary_top_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 km/h"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Safety Score with Progress -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_shield_check"
                                    app:tint="@color/tertiary"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Safety Score"
                                        android:textSize="12sp"
                                        android:textColor="@color/on_surface_variant"
                                        android:fontFamily="sans-serif" />

                                    <TextView
                                        android:id="@+id/tv_summary_safety_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0%"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/tertiary"
                                        android:fontFamily="sans-serif-medium" />
                                </LinearLayout>
                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/safety_progress"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:progress="92"
                                app:indicatorColor="@color/tertiary"
                                app:trackColor="@color/surface_container_highest"
                                app:trackCornerRadius="3dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/stats_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back_to_home"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="28dp"
                app:strokeColor="@color/outline"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_back_to_home"
                style="@style/Widget.Material3.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Save Trip"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/primary"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                app:iconSize="20dp" />
        </LinearLayout>

        <!-- Bottom Spacer -->
        <View
            android:id="@+id/bottom_spacer"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/action_buttons"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>