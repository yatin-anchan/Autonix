<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FF0000"
        app:title=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#FFFFFF" />

        <Space
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <!-- Dashboard Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigation Dashboard"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navigation Center"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan your route, control your fleet"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC" />

            </LinearLayout>

            <!-- Navigation Tools Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navigation Tools"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Map Card -->
            <LinearLayout
                android:id="@+id/cardMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_map"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interactive Map"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View real-time traffic and routes"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#FFFFFF"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Navigation Planner Card -->
            <LinearLayout
                android:id="@+id/cardNavPlanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_navigation"
                    app:tint="#2196F3"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route Planner"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan optimal routes and waypoints"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#FFFFFF"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Fleet Management Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fleet Management"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Fleet Control Card -->
            <LinearLayout
                android:id="@+id/cardFleetControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_fleet"
                        app:tint="#FF9800"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFleetTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fleet Control Center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage your fleet operations"
                            android:textSize="12sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/expandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:tint="#FFFFFF" />


                </LinearLayout>

                <!-- Join/Create Options -->
                <LinearLayout
                    android:id="@+id/fleetOptionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/btnJoin"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_group_add"
                            app:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join Fleet"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnCreate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/card_background_green"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_add"
                            app:tint="#FFFFFF"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create Fleet"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Join Layout -->
                <LinearLayout
                    android:id="@+id/joinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Fleet Code"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/etJoinCode"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background"
                            android:hint="Enter 6-digit code"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#888888"
                            android:padding="12dp"
                            android:layout_marginEnd="12dp"
                            android:inputType="textCapCharacters"
                            android:maxLength="6" />

                        <LinearLayout
                            android:id="@+id/btnConfirmJoin"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/card_background_green"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Join"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Create Layout -->
                <LinearLayout
                    android:id="@+id/createLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Code Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/code_display_background"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fleet Code"
                                android:textSize="12sp"
                                android:textColor="#CCCCCC"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvGeneratedCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ABC123"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                android:fontFamily="monospace" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnCopyCode"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_copy"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            app:tint="#FFFFFF"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/btnShareCode"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_share"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            app:tint="#FFFFFF"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- Fleet Settings -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#1A1A1A"
                        android:padding="16dp">

                        <!-- Lock Switch -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_lock"
                                app:tint="#FF9800"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Password Protection"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF" />

                            <Switch
                                android:id="@+id/switchLock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!-- Password Field -->
                        <EditText
                            android:id="@+id/etFleetPassword"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="Enter fleet password"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#888888"
                            android:padding="12dp"
                            android:inputType="textPassword"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <!-- Driver Count -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_people"
                                app:tint="#2196F3"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Maximum Drivers"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF" />

                            <EditText
                                android:id="@+id/etDriverCount"
                                android:layout_width="80dp"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background"
                                android:hint="10"
                                android:textColor="#FFFFFF"
                                android:textColorHint="#888888"
                                android:textAlignment="center"
                                android:inputType="number"
                                android:maxLength="3" />

                        </LinearLayout>

                        <!-- Create Button -->
                        <LinearLayout
                            android:id="@+id/btnConfirmCreate"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/card_background_green"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_rocket"
                                app:tint="#FFFFFF"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Launch Fleet"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>