<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Header Section with Animated Warning Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Pulsing Warning Icon -->
            <ImageView
                android:id="@+id/ivWarningIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_warning_triangle"
                android:background="@drawable/pulsing_warning_background"
                android:padding="20dp"
                app:tint="@color/warning_orange"
                android:layout_marginBottom="16dp" />

            <!-- Main Warning Title -->
            <TextView
                android:id="@+id/tvWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ Crash Detected"
                android:textSize="24sp"
                android:textColor="@color/warning_orange"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency services will be contacted automatically"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <!-- Countdown Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_section_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <!-- Countdown Timer Display -->

            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seconds until emergency call"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Circular Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:progress="0"
                android:max="30"
                android:progressDrawable="@drawable/circular_progress_drawable"
                android:indeterminate="false" />

            <!-- Progress Text Overlay -->
            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-call in progress..."
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="12dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="✋ I'M OKAY - CANCEL ALERT"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/btn_red_background"
                android:letterSpacing="0.02"
                android:layout_marginBottom="12dp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Status Indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- GPS Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_gps"
                    app:tint="@color/success_green"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS Active"
                    android:textSize="12sp"
                    android:textColor="@color/success_green"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Network Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_network"
                    app:tint="@color/success_green"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:textSize="12sp"
                    android:textColor="@color/success_green"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>
        </LinearLayout>

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you're unable to respond, emergency services will be contacted with your location"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingMultiplier="1.3"
            android:alpha="0.8" />
    </LinearLayout>
</androidx.cardview.widget.CardView>