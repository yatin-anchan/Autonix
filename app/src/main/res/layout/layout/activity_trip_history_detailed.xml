<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF0000"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trip Details"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnShareTrip"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share trip" />

            <ImageButton
                android:id="@+id/btnDeleteTrip"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete trip" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_margin="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Trip Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_margin="12dp">

                <!-- Date + Time -->
                <TextView
                    android:id="@+id/tvTripDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 01, 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTripTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_timer"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration:"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_map_pin"
                        app:tint="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance:"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 km"
                        android:textColor="#4CAF50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Avg Speed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_speed"
                        app:tint="#2196F3"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Speed:"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAvgSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 km/h"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Max Speed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_speed_max"
                        app:tint="#FF9800"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Speed:"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvMaxSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 km/h"
                        android:textColor="#FF9800"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Safety Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_shield_check"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safety Score:"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSafetyScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

            </LinearLayout>


            <!-- Safety Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <TextView android:id="@+id/tvDrowsinessEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drowsiness: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView android:id="@+id/tvDistractedEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distraction: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView android:id="@+id/tvHelmetStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helmet: Detected"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView android:id="@+id/tvMaxAltitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altitude: -"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Map -->
            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp" />

            <!-- Safety Events -->
            <TextView
                android:id="@+id/tvNoSafetyEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No safety events recorded"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSafetyEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
