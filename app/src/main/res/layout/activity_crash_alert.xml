<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Animated Emergency Header with Pulsing Effect -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/emergency_gradient_background"
        android:elevation="12dp"
        android:padding="24dp">

        <!-- Emergency Status Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_emergency_alert"
            android:layout_gravity="center"
            android:background="@drawable/pulsing_circle_background"
            android:padding="20dp"
            app:tint="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ CRASH DETECTED"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp" />

        <!-- Emergency Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency services will be contacted automatically"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="16dp" />

        <!-- Crash Time Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/time_badge_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_schedule"
                app:tint="@color/white"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvCrashTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crash Occurred: 14:23:45"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- User Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Victim Information"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium" />
                    </LinearLayout>

                    <!-- User Details Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Name Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_badge"
                                app:tint="@color/accent_purple"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Full Name"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/roboto_regular" />

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Age and DOB Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Age -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_cake"
                                    app:tint="@color/success_green"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Age"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/roboto_regular" />

                                    <TextView
                                        android:id="@+id/tvAge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/roboto_medium"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- DOB -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/warning_orange"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date of Birth"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/roboto_regular" />

                                    <TextView
                                        android:id="@+id/tvDob"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Loading..."
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/roboto_medium"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Blood Group Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_medical"
                                app:tint="@color/error_red"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Blood Group"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/roboto_regular" />
                            </LinearLayout>

                            <!-- Blood Group Visual Indicator -->
                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/blood_group_circle"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvBloodGroupIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="A+"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Emergency Contacts Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_contacts"
                            app:tint="@color/success_green"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Emergency Contacts"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto-contacting..."
                            android:textColor="@color/warning_orange"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_regular"
                            android:background="@drawable/status_badge_background"
                            android:padding="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading emergency contacts..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:lineSpacingMultiplier="1.3" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Emergency Status Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- SOS Signal Status -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_sos"
                            app:tint="@color/error_red"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/pulsing_sos_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOS ACTIVE"
                            android:textColor="@color/error_red"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Beacon Status -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_location_beacon"
                            app:tint="@color/primary_blue"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/pulsing_beacon_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BEACON ON"
                            android:textColor="@color/primary_blue"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Action Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_action_gradient"
        android:padding="24dp"
        android:elevation="12dp">

        <!-- Emergency Timer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/timer_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_timer"
                app:tint="@color/white"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvEmergencyTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-call in 30s"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>

        <!-- Stop Emergency Button -->
        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ›‘ I'M OKAY - STOP EMERGENCY"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/stop_button_background"
            android:letterSpacing="0.02"
            android:elevation="8dp" />

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap the button above to verify your identity and stop the emergency alert"
            android:textColor="@color/text_secondary_light"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.2" />
    </LinearLayout>

</LinearLayout>